<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:navigationview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical" >

    <com.milanix.example.downloader.view.NavigationView
        android:id="@+id/navigation_folder"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        navigationview:label_color="@color/navigation_tab_label_color"
        navigationview:label_paddingLeft="4dp"
        navigationview:label_paddingRight="12dp"
        navigationview:label_textStyle="bold"
        navigationview:nav_background="@drawable/bg_nav"
        navigationview:tab_background="@drawable/bg_navtab" />

    <ListView
        android:id="@+id/list_folder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/list_padding" >
    </ListView>

</LinearLayout>