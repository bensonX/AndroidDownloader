<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rate_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rateme"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/rate_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="Are you enjoying our app?"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/text_color_primary" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:background="@color/text_color_primary_light" />

    <TextView
        android:id="@+id/rate_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_action_check"
        android:gravity="center_vertical"
        android:text="YES"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/color_primary_dark" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:background="@color/text_color_primary_light" />

    <TextView
        android:id="@+id/rate_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_action_uncheck"
        android:gravity="center_vertical"
        android:text="NO"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/color_primary_dark" />

</LinearLayout>