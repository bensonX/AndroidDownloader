<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.NoActionBar"></style>

    <!-- Application Core theme. -->
    <style name="DownloaderTheme" parent="AppBaseTheme">
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/ascent_color</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:textViewStyle">@style/DownloaderTheme.TextView</item>
        <item name="android:checkboxStyle">@style/DownloaderTheme.CheckBox</item>
        <item name="android:editTextStyle">@style/DownloaderTheme.EditText</item>
        <item name="android:radioButtonStyle">@style/DownloaderTheme.RadioButton</item>
    </style>

    <!-- Nav drawer arrow -->
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <!-- Dialog -->
    <style name="DownloaderDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/ascent_color</item>
    </style>

    <!-- Nav drawer item -->
    <style name="navigationdrawer_item">
        <item name="android:textSize">@dimen/navigation_drawer_text_size</item>
        <item name="android:background">@color/navigation_tab_normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:drawablePadding">@dimen/navigation_icon_padding</item>
    </style>

    <!-- Nav spinner item -->
    <style name="navigationspinner_item">
        <item name="android:textColor">@color/navigation_spinner_title_color</item>
        <item name="android:textSize">@dimen/navigation_drawer_text_size</item>
        <item name="android:background">@color/navigation_tab_normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:drawablePadding">@dimen/navigation_icon_padding</item>
    </style>

    <!-- Toolbar -->
    <style name="ToolBarStyle">
        <item name="android:background">@color/color_primary</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <!-- UI components -->
    <style name="DownloaderTheme.TextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="DownloaderTheme.CheckBox" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="DownloaderTheme.EditText" parent="android:Widget.EditText">
        <item name="android:textColorHint">@color/text_color_primary_light</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="DownloaderTheme.RadioButton" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

</resources>