<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.NoActionBar"></style>

    <!-- Application Core theme. -->
    <style name="DownloaderTheme" parent="AppBaseTheme">
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/ascent_color</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="navigationdrawer_item">
        <item name="android:textSize">@dimen/navigation_drawer_text_size</item>
        <item name="android:background">@color/navigation_tab_normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:drawablePadding">@dimen/navigation_icon_padding</item>
    </style>

    <style name="navigationspinner_item">
        <item name="android:textColor">@color/navigation_spinner_title_color</item>
        <item name="android:textSize">@dimen/navigation_drawer_text_size</item>
        <item name="android:background">@color/navigation_tab_normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:drawablePadding">@dimen/navigation_icon_padding</item>
    </style>

    <style name="ToolBarStyle" parent="">
        <item name="android:background">@color/color_primary</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

</resources>