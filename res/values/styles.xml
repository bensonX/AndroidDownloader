<resources>

    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light"></style>

    <!-- Application Core theme. -->
    <style name="DownloaderTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/DownloaderTheme.ActionBar</item>
    </style>

    <!-- ActionBar theme -->
    <style name="DownloaderTheme.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/actionbar_dark_background</item>
        <item name="android:titleTextStyle">@style/DownloaderTheme.ActionBar.Title</item>
        <item name="android:displayOptions">useLogo|showHome|showTitle</item>
        <item name="android:backgroundStacked">@color/actiontab_dark_background</item>
    </style>

    <style name="DownloaderTheme.ActionBar.OverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow_dark</item>
    </style>

    <style name="DownloaderTheme.ActionBar.Title" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_textcolor</item>
    </style>

</resources>